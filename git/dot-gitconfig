[includeIf "gitdir:~/personal/"]
    path = ~/.gitconfig-personal

[includeIf "gitdir:~/work/"]
    path = ~/.gitconfig-work

[alias]
    a = add
    aa = add --all

    b = branch
    bl = blame

    c = commit
    cm = commit -m

    ch = checkout
    chb = checkout -b

    cl = clone

    d = diff
    ds = diff --staged
    dt = difftool

    l = log --oneline
    ll = log

    pl = pull

    ps = push
    psu = push -u origin HEAD

    rb = rebase
    re = reset
    rh = reset HEAD

    s = status

    st = stash

    wt = worktree
